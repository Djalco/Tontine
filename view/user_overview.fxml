<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="10.0" stylesheets="@../css/light.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserOverviewController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-bold" text="Utilisateur" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="backBtn" mnemonicParsing="false">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/back.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
      <VBox spacing="25.0" style="-fx-background-color: #fff;">
         <children>
            <VBox spacing="10.0">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-form" text="General" />
                     </children>
                  </HBox>
                  <PieChart />
                  <HBox spacing="20.0">
                     <children>
                        <Separator orientation="VERTICAL" />
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-detail" text="Nombre de membres" />
                              <Separator prefWidth="200.0" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-detail" text="Nombre de membres en infraction" />
                              <Separator prefWidth="200.0" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-detail" text="Nbre Infractions:" />
                              <Separator prefWidth="200.0" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-detail" text="Nbre de seances" />
                              <Separator prefWidth="200.0" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-detail" text="Nbre de seances cotisee" />
                              <Separator prefWidth="200.0" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-detail" text="Montant Infraction Seances" />
                              <Separator prefWidth="200.0" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-detail" text="Nbre infraction seance" />
                              <Separator prefWidth="200.0" />
                           </children>
                        </VBox>
                        <Separator orientation="VERTICAL" />
                        <VBox alignment="TOP_RIGHT" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-detail-number" text="20" />
                              <Separator prefWidth="200.0" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-detail-number" text="17" />
                              <Separator prefWidth="200.0" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-detail-number" text="3" />
                              <Separator prefWidth="200.0" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-detail-number" text="17" />
                              <Separator prefWidth="200.0" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-detail-number" text="15" />
                              <Separator prefWidth="200.0" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-detail-number" text="2250" />
                              <Separator prefWidth="200.0" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-detail-number" text="2" />
                              <Separator prefWidth="200.0" />
                           </children>
                        </VBox>
                        <Separator orientation="VERTICAL" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox spacing="10.0" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <HBox spacing="25.0">
         <children>
            <Button fx:id="returnBtn" mnemonicParsing="false" styleClass="cancel-btn" text="Retour" />
         </children>
      </HBox>
   </children>
   <styleClass>
      <String fx:value="tableContainer" />
      <String fx:value="drop-shadow" />
   </styleClass>
</VBox>
